{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    //ModuleResolution was "bundler" but it was causing issues with the import of the .ts files
    //Changed for webstorm to work
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "jsdom"]
  },
  "include": ["vite.config.ts", "vitest.config.ts", "playwright.config.ts", "package.json"]
}
